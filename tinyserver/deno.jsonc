{
  "fmt": {
    "options": {
      "useTabs": false,
      "indentWidth": 2,
      "singleQuote": true,
      "lineWidth": 120
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["eqeqeq", "no-eval"]
    }
  },
  "tasks": {
    "server": "deno run --lock=lock.json --allow-env --allow-net --allow-read --allow-write --unstable main.ts",
    "checkdependent": "deno cache --lock=lock.json --lock-write --unstable deps.ts"
  }
}
